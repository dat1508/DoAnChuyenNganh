@model IEnumerable<WebDauGia.Models.CATEGORY_BLOG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:left;margin-top:20px;">DANH MỤC BÀI VIẾT</h2>
<p style="text-align:right;margin:5px;">
    <a href="@Url.Action("Create","CATEGORY_BLOG")" class="btn btn-primary">Tạo mới</a>
</p>
<table class="table" id="Table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="width: 150px; text-align: center;">Chỉnh sửa</th>
        </tr>
  

    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td style="text-align: center;">
                <a class="btn btn-sm btn-success" href="@Url.Action("Edit","CATEGORY_BLOG",new { @id = item.IdCate })">
                    <i class="fas fa-edit"></i>
                </a>
                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","CATEGORY_BLOG",new { @id = item.IdCate })">
                    <i class="fas fa-trash-alt"></i>
                </a>
                <a class="btn btn-sm btn-info" href="@Url.Action("Details","CATEGORY_BLOG",new { @id = item.IdCate })">
                    <i class="fas fa-info-circle"></i>
                </a>
            </td>
        </tr>
        }
        </tbody>
</table>
