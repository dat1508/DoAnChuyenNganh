@model WebDauGia.Models.CATEGORY_BLOG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="container">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-9">
                        <h2 class="h2">XÓA DANH MỤC BÀI VIẾT</h2>
                    </div>
                    <div class="col-md-3" style="text-align:right;">
                        @Html.ActionLink("CHỈNH SỬA", "Edit", new { id = Model.IdCate }) |
                        @Html.ActionLink("QUAY LẠI", "Index")
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row border border-2 border-dark rounded-3 py-3 col-md-10">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label class="form-label">Tên bài viết</label>
                            <input type="text" name="address" class="form-control" required value="@Model.Name" readonly>
                        </div>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12 py-3">
                        <input type="submit" value="Delete" class="btn btn-danger form-control" />
                    </div>
                </div>
            }
        </div>
    </div>
