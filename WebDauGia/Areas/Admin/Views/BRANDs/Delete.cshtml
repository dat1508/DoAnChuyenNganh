@model WebDauGia.Models.BRAND

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-9">
                    <h2 class="h2">XEM CHI TIẾT</h2>
                </div>
                <div class="col-md-3" style="text-align:right;">
                
                    @Html.ActionLink("QUAY LẠI", "Index")
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row border border-2 border-dark rounded-3 py-3 col-md-10">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label">Tên bài viết</label>
                        <input type="text" name="address" class="form-control" required value="@Model.Name" readonly>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color py-3">
                <input type="submit" value="Delete" class="btn btn-danger form-control" /> 
            
            </div>
        }
    </div>

</div>
