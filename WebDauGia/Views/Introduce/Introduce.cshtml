@using WebDauGia.Models

@{
    ViewBag.Title = "Giới thiệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script src="~/Public/js/typed.js"></script>
@foreach (var introduce in Model)
{

    <div id="home" class="intro route bg-image" style="background-image: url(/Public/img/introduce.jpg)">
        <div class="overlay-itro"></div>
        <div class="intro-content display-table">
            <div class="table-cell">
                <div class="container">
                    @*<p class="display-6 color-d">Xin chào!</p>*@
                    <h1 class="intro-title mb-4">DTV ĐẤU GIÁ</h1>
                    <p class="intro-subtitle"><span class="text-slider-items">@introduce.Title</span><strong class="text-slider text-light"></strong></p>
                    <p class="pt-3"><a class="btn btn-primary btn js-scroll px-4" href="@Url.Action("Detail", "Blog", new { id = introduce.IdBlog }, null)" role="button">ĐỌC THÊM</a></p>
                </div>
            </div>
        </div>
    </div>
}

@section scripts{
    <script>
        if ($('.text-slider').length == 1) {
            var typed_strings = $('.text-slider-items').text();
            var typed = new Typed('.text-slider', {
                strings: typed_strings.split(','),
                typeSpeed: 80,
                loop: true,
                backDelay: 1100,
                backSpeed: 30
            })(jQuery);
        }
    </script>
}

