@model WebDauGia.Models.USER
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">Đăng ký</h1>
            </div>
            <div class="col-md-5">
                <ul class="breadcrumb d-flex justify-content-end">
                    <li class="breadcrumb-item"><a href="home.html">Trang chủ</a></li>
                    <li class="breadcrumb-item active"> Đăng ký</li>
                </ul>
            </div>
        </div>
    </div>
</div>

    <div id="content">
        <div class="container">
            <div class="row py-5 mt-4 align-items-center">
                <!-- For Demo Purpose -->
                <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
                    <img src="https://res.cloudinary.com/mhmd/image/upload/v1569543678/form_d9sh6m.svg" alt="" class="img-fluid mb-3 d-none d-md-block">
                    <h1>Tạo tài khoản mới</h1>
                    <p class="font-italic text-muted mb-0">Nhanh chóng và dễ dàng</p>
                </div>

                <!-- Registeration Form -->
                <div class="col-md-7 col-lg-6 ml-auto">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">

                            <!-- Full Name -->
                            <div class="col-lg-12 mb-4">
                                @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @class = "form-control bg-white border-left-0 border-md", placeholder = "Họ tên" } })
                                @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
                            </div>
                            <!-- Email Address -->
                            <div class="col-lg-12 mb-4">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control bg-white border-left-0 border-md", placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <!-- User name -->
                            <div class="col-lg-12 mb-4">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control bg-white border-left-0 border-md", placeholder = "Tài khoản" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                @Html.Raw(ViewBag.alert)
                            </div>
                            <!-- pass -->
                            <div class="col-lg-12 mb-4">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control bg-white border-left-0 border-md", placeholder = "Mật khẩu" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <!-- comfirm pass -->
                            <div class="col-lg-12 mb-4">
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control bg-white border-left-0 border-md", placeholder = "Mật khẩu" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-12 mb-4">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control bg-white border-left-0 border-md", placeholder = "Địa chỉ" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-12 mb-4">
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control bg-white border-left-0 border-md", placeholder = "Số điện thoại" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-12 mb-4">
                                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control bg-white border-left-0 border-md", type = "date" } })
                                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-12 mb-4">
                                <b>Giới tính</b>
                                @Html.DropDownListFor(modelItem => modelItem.Gender, new[] { new SelectListItem { Text = "Nam", Value = "true" }, new SelectListItem { Text = "Nữ", Value = "false" } }, new { htmlAttributes = new { @class = "custom-select" } })
                            </div>
                            <!-- Submit Button -->
                            <div class="form-group col-lg-12 mx-auto mb-0">
                                <input type="submit" value="TẠO TÀI KHOẢN MỚI" class="btn btn-primary w-100 font-weight-bold" />
                            </div>

                            <!-- Divider Text -->
                            <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                                <div class="border-bottom w-100 ml-5"></div>
                                <span class="px-2 small text-muted font-weight-bold text-muted">hoặc</span>
                                <div class="border-bottom w-100 mr-5"></div>
                            </div>

                            <!-- Social Login -->
                            <div class="form-group col-lg-12 mx-auto">
                                <a href="#" class="btn btn mt-2 btn-block py-2 btn-facebook">
                                    <i class="fa fa-facebook-f mr-2"></i>
                                    <span class="font-weight-bold text-light">ĐĂNG KÝ BẰNG FACEBOOK</span>
                                </a>
                            </div>

                            <!-- Already Registered -->
                            <div class="text-center w-100">
                                <p class="text-muted font-weight-bold">Đã đăng ký? <a href="#" class="text-primary ml-2">Đăng nhập</a></p>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>

    </div>



