                    input.placeholder = 'Nhập hãng tại đây';
                    divInput.appendChild(input);
                }
                else {
                    if (document.getElementById("new-id-brand")) {
                        $('#new-id-brand').remove();
                    }
                }
            })
        });
    </script>
